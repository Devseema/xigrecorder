{
  "name": "xigrecorder",
  "version": "0.0.1",
  "private": true,
  "main": "main/index.js",
  "scripts": {
    "dev:renderer": "cd renderer && npm run dev",
    "dev:electron": "cross-env VITE_DEV_SERVER_URL=http://localhost:5174 electron .",
    "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:electron\"",
    "start": "electron .",
    "build:renderer": "cd renderer && npm run build"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^38.0.0",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "electron-store": "^10.1.0"
  }
}
